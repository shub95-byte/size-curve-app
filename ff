  <script>
    function toggleDarkMode() {
      document.body.classList.toggle('dark-mode');
      if (document.body.classList.contains('dark-mode')) {
        document.body.style.background = '#1e1e1e';
        document.body.style.color = '#f4f4f4';
      } else {
        document.body.style.background = '';
        document.body.style.color = '#333';
      }
    }

    document.getElementById('ventForm').addEventListener('submit', function(e) {
      e.preventDefault();
      var form = e.target;
      var data = new FormData(form);
      fetch(form.action, { method: 'POST', body: data })
        .then(response => response.text())
        .then(text => {
          document.getElementById('formMsg').style.color = 'green';
          document.getElementById('formMsg').textContent = 'Your story has been submitted. Thank you for sharing.';
          form.reset();
        })
        .catch(err => {
          document.getElementById('formMsg').style.color = 'red';
          document.getElementById('formMsg').textContent = 'Error submitting your story. Please try again.';
        });
    });

    document.getElementById('feedbackForm').addEventListener('submit', function(e) {
      e.preventDefault();
      document.getElementById('feedbackMsg').style.color = 'green';
      document.getElementById('feedbackMsg').textContent = 'Thank you for your feedback!';
      e.target.reset();
    });

    document.getElementById('sessionForm').addEventListener('submit', function(e) {
      e.preventDefault();
      document.getElementById('sessionMsg').style.color = 'green';
      document.getElementById('sessionMsg').textContent = 'Your request has been received. We will contact you soon!';
      e.target.reset();
    });
  </script>
